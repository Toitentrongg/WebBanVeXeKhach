@page
@model DoAnWeb.Areas.Admin.Pages.QLChuyenXeModel
@{
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, invoice, html5, responsive, Projects">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Dreams Pos admin template</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.jpg">

    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/assets/css/animate.css">


    <link rel="stylesheet" href="~/assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="~/assets/css/style.css">
</head>
<body>
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Quản Lý Chuyến Xe</h4>
            </div>
            <div class="page-btn">
                <a href="CEChuyenXe?chucnang=Create" class="btn btn-added"><img src="~/assets/img/icons/plus.svg" alt="img" class="me-1">Thêm Chuyến Xe</a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-top">
                    <div class="search-set">
                        <div class="search-path">
                            <a class="btn btn-filter" id="filter_search">
                                <img src="~/assets/img/icons/filter.svg" alt="img">
                                <span><img src="~/assets/img/icons/closes.svg" alt="img"></span>
                            </a>
                        </div>
                        <div class="search-input">
                            <a class="btn btn-searchset"><img src="~/assets/img/icons/search-white.svg" alt="img"></a>
                        </div>
                    </div>
                    <div class="wordset">
                        <ul>
                            <li>
                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="~/assets/img/icons/pdf.svg" alt="img"></a>
                            </li>
                            <li>
                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="~/assets/img/icons/excel.svg" alt="img"></a>
                            </li>
                            <li>
                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="~/assets/img/icons/printer.svg" alt="img"></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead>
                            <tr>
                                <th>
                                    <label class="checkboxs">
                                        <input type="checkbox" id="select-all">
                                        <span class="checkmarks"></span>
                                    </label>
                                </th>
                                <th>Mã Chuyến Xe</th>
                                <th>Mã Tuyến</th>
                                <th>Thời Gian Xuất Phát </th>
                                <th>Số Lượng Ghế</th>
                                <th>Số Vé Còn</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <form method="post">
                                @foreach (var chuyenXe in Model.DanhSachChuyenXe)
                                {
                                    <tr>
                                        <td>
                                            <label class="checkboxs">
                                                <input type="checkbox">
                                                <span class="checkmarks"></span>
                                            </label>
                                        </td>
                                        <td>@chuyenXe.MaChuyenXe</td>
                                        <td>@chuyenXe.MaTuyen</td>
                                        <td>@chuyenXe.ThoiGianXuatPhat.ToShortDateString()</td>
                                        <td>@chuyenXe.SoLuongGhe</td>
                                        <td>@chuyenXe.SoVeCon</td>
                                        <td>
                                            <a class="me-3" href="CEChuyenXe?maChuyenXe=@chuyenXe.MaChuyenXe&chucnang=edit">
                                            <img src="~/assets/img/icons/edit.svg" alt="img">
                                            </a>
                                            <input type="hidden" name="maChuyenXe" value="@chuyenXe.MaChuyenXe" />
                                            <button type="submit" class="btn btn-secondary btn-lg btn-block">
                                                <img src="~/assets/img/icons/delete.svg" alt="img">
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </form>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var buttons = document.querySelectorAll(".btn-secondary");
            buttons.forEach(function (button) {
                button.addEventListener("click", function () {
                    var maChuyenXe = this.parentElement.querySelector('input[name="maChuyenXe"]').value;
                    // Chuyển hướng đến trang chọn ghế với mã chuyến xe làm tham số trong URL
                    window.location.href = "QLChuyenXe?maChuyenXe=" + maChuyenXe;
                });
            });
        });
    </script>
</body>
</html>